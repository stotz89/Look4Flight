<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <TextView
        android:id="@+id/list_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/list_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_origin"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="20dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/list_date_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_origin"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_dep_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_origin"
        android:layout_toRightOf="@+id/list_date_from"
        android:layout_marginLeft="20dip"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_arr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_origin"
        android:layout_toRightOf="@+id/list_dep_time"
        android:layout_marginLeft="20dip"
        android:textColor="#343434"
        android:textSize="12sp" />

</RelativeLayout>