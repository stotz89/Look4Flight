<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:columnCount="2"
    android:rowCount="1">

    <GridLayout
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <RelativeLayout
            android:layout_row="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/list_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/list_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_origin"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="20dip"
                android:textStyle="bold"
                android:typeface="sans" />



            <TextView
                android:id="@+id/list_date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_dep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin"
                android:layout_toRightOf="@+id/list_date_from"
                android:layout_marginLeft="20dip"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_arr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin"
                android:layout_toRightOf="@+id/list_dep_time"
                android:layout_marginLeft="20dip"
                android:textColor="#343434"
                android:textSize="12sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_origin_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/list_destination_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_origin_2"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="20dip"
                android:textStyle="bold"
                android:typeface="sans" />



            <TextView
                android:id="@+id/list_date_from_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin_2"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_dep_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin_2"
                android:layout_toRightOf="@+id/list_date_from_2"
                android:layout_marginLeft="20dip"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_arr_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_origin_2"
                android:layout_toRightOf="@+id/list_dep_time_2"
                android:layout_marginLeft="20dip"
                android:textColor="#343434"
                android:textSize="12sp" />

        </RelativeLayout>



    </GridLayout>




        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:minWidth="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#343434"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/list_price"/>




</GridLayout>